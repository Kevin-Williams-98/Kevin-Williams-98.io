                                                            <!--Javascript to populate dropdown menu  from database-->
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="container-fluid justify-content-center">
                                        <div class="row justify-content-center d-inline">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label for="subject">Subject:</label>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <select name="subject" id="subject">
                                                            <!--Javascript to populate dropdown menu from database-->
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="container-fluid justify-content-center">
                                        <div class="row justify-content-center d-inline">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label for="courseName">Course Name:</label>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <select name="courseName" id="courseName">
                                                            <!--Javascript to populate dropdown menu  from database-->
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="container-fluid justify-content-center">
                                        <div class="row justify-content-center d-inline">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label for="courseInstructor">Course Instructor:</label>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <select name="courseInstructor" id="courseInstructor">
                                                            <!--Javascript to populate dropdown menu  from database-->
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="container-fluid justify-content-center">
                                        <div class="row justify-content-center d-inline">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <label for="courseNumber">Course Number:</label>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <select name="courseNumber" id="courseNumber">
                                                            <!--Javascript to populate from dropdown menu database-->
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 offset-lg-1">
                                    <input type="submit" value="Search Class" class="btn btn-outline-dark">
                                    </div>
                                    </div>
                            </div>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
