<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Create Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="../stylesheet.css" />
</head>
<header>

    <%- include('z-i-nav') %>
        <% if(typeof courseStatus !=='undefined' ) { if(courseStatus=='Course already exist' ) {console.log('Course status server side '+ courseStatus);}
    else
    {
    console.log(' Course status server side: '+ courseStatus);
    }
    
} %>

</header>

<body class="bg-dark">
    <div class="container bg-warning create-class-form p-5">
        <h1 class="text-center">Create Course</h1>
        <form class="form" action="add-class" id="create-class-form" method="post">


            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">

            
                    

            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2">
                        <label for="term">Term:</label>
                    </div>
                    <div class="col-lg-4">
                        <input name="term" id="term">
                       </input>
                    </div>
                        </div>
                    </div>
                </div>
            </div>






            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2">
                        <label for="subject">Subject:</label>
                    </div>
                    <div class="col-lg-4">
                        <input name="subject" id="subject">
                       
                        </input>
                        
                        </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2">
                        <label for="courseName">Course Name:</label>
                        </div>
                        <div class="col-lg-4">
                        <input name="courseName" id="courseName">
                       
                        </input>
                        </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2">
                        <label for="courseNumber">Course Number:</label>
                    </div>
                    <div class="col-lg-4">
                        <input name="courseNumber" id="courseNumber">
                    </div>
                       
                        </input>
                    </div>

                    </div>
                </div>
            </div>


            <div class="container-fluid justify-content-center">
                <div class="row justify-content-center d-inline">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 offset-lg-2">
                                <div class="row">
                                    <div class="col-lg-12 justify-content-center text-center">
                        <input type="submit" value="Create Course">
                        </div>
                        </div>
                        </div>
                        </div> 
                    </div>
                </div>
            </div>







            </div>

        </div>





        </form>
    </div>












    <script src="ejs.min.js">  </script>

    <script>
              let theStatus = '<%-courseStatus%>' 
              if(theStatus=='Course already exist')
              {
          
                console.log('Course status client side: ' + theStatus);
                window.alert(theStatus);
            }
        
        
    </script>







</body>


</html>